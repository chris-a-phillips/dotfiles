{
  "name": "Work",
  "description": "Comprehensive setup for work development with cloud tools",
  "brewfile": "Brewfile-work",
  "features": {
    "core_tools": true,
    "development": true,
    "productivity": true,
    "cloud_tools": true,
    "extensive_fonts": true,
    "remote_development": true,
    "unity_development": true,
    "gaming": false
  },
  "packages": {
    "additional_brews": [
      "act",
      "asdf",
      "aws-sam-cli",
      "awscli",
      "colima",
      "colordiff",
      "credstash",
      "cryptography",
      "direnv",
      "docker",
      "docker-credential-helper",
      "docutils",
      "git-lfs",
      "gnupg",
      "harlequin",
      "jq",
      "kubernetes-cli",
      "kubectx",
      "lazysql",
      "lima",
      "mysql",
      "openssl@3",
      "pycparser",
      "qemu",
      "redis",
      "telnet",
      "tlrc",
      "urlview",
      "yq"
    ],
    "additional_casks": [
      "alacritty",
      "db-browser-for-sqlite",
      "dockdoor"
    ]
  },
  "macos_defaults": {
    "enable": true,
    "settings": {
      "dark_mode": true,
      "military_time": true,
      "show_hidden_files": true,
      "disable_autocorrect": true,
      "disable_autocapitalize": true,
      "show_path_bar": true,
      "show_status_bar": true,
      "expand_save_dialog": true,
      "expand_print_dialog": true
    }
  },
  "git_config": {
    "enable": true,
    "prompt_for_credentials": true
  },
  "ssh_setup": {
    "enable": true,
    "key_type": "ed25519",
    "key_name": "work"
  },
  "additional_tools": {
    "lazygit": true,
    "powerlevel10k": true,
    "tmux_plugins": true,
    "neovim_lazyvim": true
  },
  "cloud_tools": {
    "aws_cli": true,
    "docker": true,
    "kubernetes": true,
    "terraform": true
  }
} 