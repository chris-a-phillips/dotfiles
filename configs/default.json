{
  "name": "Default",
  "description": "Basic setup with essential tools",
  "brewfile": "Brewfile-default",
  "features": {
    "core_tools": true,
    "development": true,
    "productivity": true,
    "cloud_tools": false,
    "extensive_fonts": false,
    "remote_development": false,
    "unity_development": false,
    "gaming": false
  },
  "packages": {
    "additional_brews": [],
    "additional_casks": [
      "alt-tab",
      "font-hack-nerd-font",
      "hiddenbar",
      "itsycal"
    ]
  },
  "macos_defaults": {
    "enable": true,
    "settings": {
      "dark_mode": true,
      "military_time": true,
      "show_hidden_files": true,
      "disable_autocorrect": true,
      "disable_autocapitalize": true,
      "show_path_bar": true,
      "show_status_bar": true,
      "expand_save_dialog": true,
      "expand_print_dialog": true
    }
  },
  "git_config": {
    "enable": true,
    "prompt_for_credentials": true
  },
  "ssh_setup": {
    "enable": true,
    "key_type": "ed25519",
    "key_name": "default"
  },
  "additional_tools": {
    "lazygit": false,
    "powerlevel10k": true,
    "tmux_plugins": true,
    "neovim_lazyvim": false
  }
} 